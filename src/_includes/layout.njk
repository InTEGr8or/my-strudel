<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} - My Strudel</title>
    <script>window.process = { env: { NODE_ENV: 'production' } };</script>
    <script src="https://unpkg.com/@strudel/repl"></script>
    <!-- ABCjs for sheet music notation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/abcjs/6.4.1/abcjs-basic-min.js"></script>
    <style>
        body {
            font-family: system-ui, -apple-system, sans-serif;
            background: #1a1a1a;
            color: #eee;
            margin: 0;
            display: flex;
            flex-direction: column;
            height: 100vh;
            overflow: hidden;
        }
        header {
            padding: 0.5rem 1rem;
            background: #222;
            border-bottom: 1px solid #333;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 50px;
            box-sizing: border-box;
            flex-shrink: 0;
        }
        .controls { display: flex; gap: 0.5rem; align-items: center; }
        button {
            background: #333; color: white; border: 1px solid #444;
            padding: 0.3rem 0.8rem; border-radius: 4px; cursor: pointer; font-size: 0.9rem;
        }
        button:hover { background: #444; }
        button.primary { background: #005cc5; border-color: #0366d6; }
        
        .app-container { display: flex; flex: 1; overflow: hidden; }
        main {
            flex: 1; display: flex; flex-direction: column;
            padding: 0; overflow: hidden; border-right: 1px solid #333;
            position: relative;
        }
        
        /* Documentation Area */
        .doc-container {
            flex: 0 0 40%; /* Take up 40% of the screen */
            background: #1e1e1e;
            padding: 1.5rem;
            overflow-y: auto;
            border-bottom: 2px solid #333;
            line-height: 1.6;
        }
        .doc-container h1, .doc-container h2 { margin-top: 0; color: #58a6ff; }
        .doc-container p { margin-bottom: 1rem; }
        
        /* Music Notation Styling */
        .abc-notation { background: white; border-radius: 8px; margin: 1rem 0; padding: 0.5rem; }
        
        .editor-container { flex: 1; display: flex; flex-direction: column; }
        .editor-container div.cm-editor { flex: 1; height: 100% !important; font-size: 15px; }
        
        aside { width: 250px; display: flex; flex-direction: column; background: #111; flex-shrink: 0; }
        .tabs { display: flex; background: #222; border-bottom: 1px solid #333; }
        .tab { padding: 0.5rem 1rem; cursor: pointer; font-size: 0.9rem; border-bottom: 2px solid transparent; }
        .tab.active { border-bottom-color: #58a6ff; background: #111; }
        .tab-content { flex: 1; overflow-y: auto; padding: 1rem; display: none; }
        .tab-content.active { display: block; }
        
        strudel-editor { display: block; height: 0; }
        a { color: #58a6ff; text-decoration: none; }
    </style>
</head>
<body>
    <header>
        <div class="controls">
            <a href="/">← Songs</a>
            <button id="play-btn" class="primary">▶ Play (Ctrl+Enter)</button>
            <button id="stop-btn">■ Stop</button>
        </div>
        <h1 style="font-size: 1.1rem; margin: 0;">{{ title }}</h1>
        <div style="width: 100px"></div>
    </header>
    <div class="app-container">
        <main>
            {% if content %}
            <div class="doc-container">
                {{ content | safe }}
            </div>
            {% endif %}

            <template id="song-source">{{ strudelCode | safe }}</template>
            <div class="editor-container">
                <strudel-editor id="strudel-repl"></strudel-editor>
            </div>
        </main>
        <aside>
            <div class="tabs">
                <div class="tab active" onclick="showTab('sounds')">Sounds</div>
                <div class="tab" onclick="showTab('ref')">Ref</div>
            </div>
            <div id="sounds" class="tab-content active">
                <code>bd</code>, <code>sd</code>, <code>hh</code>, <code>cp</code>, <code>bass</code>
            </div>
            <div id="ref" class="tab-content">
                <code>s()</code>, <code>n()</code>, <code>gain()</code>
            </div>
        </aside>
    </div>
    <script>
        // Render ABC Notation
        window.addEventListener('load', () => {
            document.querySelectorAll('pre.language-abc').forEach((el) => {
                const target = document.createElement('div');
                target.className = 'abc-notation';
                el.parentNode.replaceChild(target, el);
                ABCJS.renderAbc(target, el.textContent.trim(), { responsive: 'resize' });
            });
        });

        const repl = document.getElementById('strudel-repl');
        const source = document.getElementById('song-source');
        
        const interval = setInterval(() => {
            if (repl.editor) {
                const code = source.content.textContent.trim();
                if (code) { repl.editor.setCode(code); }
                clearInterval(interval);
            }
        }, 50);
        
        document.getElementById('play-btn').onclick = () => repl.editor?.evaluate();
        document.getElementById('stop-btn').onclick = () => repl.editor?.stop();

        window.showTab = (id) => {
            document.querySelectorAll('.tab, .tab-content').forEach(t => t.classList.remove('active'));
            event.target.classList.add('active');
            document.getElementById(id).classList.add('active');
        }
    </script>
</body>
</html>