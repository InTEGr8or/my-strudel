<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} - Strudel Kids Lab</title>
    <script>window.process = { env: { NODE_ENV: 'production' } };</script>
    <script src="https://unpkg.com/@strudel/repl"></script>
    <!-- ABCjs for sheet music notation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/abcjs/6.4.1/abcjs-basic-min.js"></script>
    <style>
        body {
            font-family: "Comic Sans MS", "Comic Sans", "Chalkboard SE", "Comic Neue", cursive, sans-serif;
            background: #1a1a1a;
            color: #eee;
            margin: 0;
            display: flex; flex-direction: column; height: 100vh; overflow: hidden;
        }
        header {
            padding: 0.5rem 1rem; background: #222; border-bottom: 3px solid #58a6ff;
            display: flex; justify-content: space-between; align-items: center; height: 60px;
            box-sizing: border-box; flex-shrink: 0;
        }
        .controls { display: flex; gap: 0.5rem; align-items: center; }
        button {
            background: #333; color: white; border: 2px solid #444;
            padding: 0.4rem 1rem; border-radius: 12px; cursor: pointer; 
            font-family: inherit; font-weight: bold; font-size: 1rem;
        }
        button:hover { background: #444; border-color: #58a6ff; }
        button.primary { background: #28a745; border-color: #1e7e34; }
        
        .app-container { display: flex; flex: 1; overflow: hidden; position: relative; }
        main { flex: 1; display: flex; flex-direction: column; padding: 0; overflow-y: auto; position: relative; }
        
        /* Documentation Area */
        .doc-container { background: #1e1e1e; padding: 1.5rem; border-bottom: 2px solid #333; line-height: 1.6; flex-shrink: 0; }
        .doc-container h1, .doc-container h2 { margin-top: 0; color: #ffcc00; }
        
        /* Music Notation Styling - Enhanced Dark Mode */
        .abc-notation { 
            background: #222; /* Specific dark background */
            border: 3px solid #ffcc00; /* Fun yellow border for kids */
            border-radius: 15px; 
            margin: 1rem 0; 
            padding: 1.5rem;
            max-width: 100%;
            overflow-x: auto;
            box-shadow: 0 4px 15px rgba(0,0,0,0.5);
        }
        .abc-notation svg { 
            display: block; margin: 0 auto; max-width: 100%; 
            /* Only invert the SVG content, not the container */
            filter: invert(1) hue-rotate(180deg) brightness(1.2) contrast(1.1);
        }
        
        .editor-container { flex-shrink: 0; display: flex; flex-direction: column; min-height: 400px; background: #111; }
        .editor-container div.cm-editor { flex: 1; height: 100% !important; font-size: 18px; }

        /* The Piano Visualizer */
        #piano-container {
            flex-shrink: 0; background: #000; display: flex; 
            justify-content: center; align-items: flex-end; padding: 25px 0;
            border-top: 3px solid #333;
        }
        .piano-key { 
            border: 1px solid #444; background: white; height: 110px; width: 35px; 
            margin: 1px; border-radius: 0 0 8px 8px; box-sizing: border-box;
            position: relative;
        }
        .piano-key.black { 
            background: #111; height: 65px; width: 22px; 
            margin-left: -12px; margin-right: -12px; z-index: 2; 
            border-color: #000;
        }
        .piano-key.active { background: #58a6ff !important; box-shadow: 0 0 20px #58a6ff; z-index: 3; }
        
        strudel-editor { display: block; height: 0; }
        a { color: #58a6ff; text-decoration: none; }

        /* Sidebar Styling */
        aside { 
            width: 250px; display: flex; flex-direction: column; background: #111; 
            flex-shrink: 0; border-left: 2px solid #333;
            transition: transform 0.3s ease, margin-right 0.3s ease;
        }
        aside.collapsed { margin-right: -250px; transform: translateX(100%); }
        .tabs { display: flex; background: #222; border-bottom: 1px solid #333; }
        .tab { padding: 0.75rem 1rem; cursor: pointer; font-size: 1rem; border-bottom: 3px solid transparent; font-family: inherit; }
        .tab.active { border-bottom-color: #58a6ff; background: #111; color: #58a6ff; }
        .tab-content { flex: 1; overflow-y: auto; padding: 1.5rem; display: none; }
        .tab-content.active { display: block; }
        
        #sounds code {
            cursor: pointer; background: #333; padding: 6px 10px; border-radius: 10px; 
            margin: 5px; display: inline-block; font-family: monospace; font-size: 1rem;
            color: #ffcc00; border: 1px solid #444;
        }
        #sounds code:hover { background: #444; border-color: #ffcc00; }

        @media (max-width: 768px) {
            body { height: auto; overflow: auto; }
            header { position: sticky; top: 0; z-index: 100; }
            .app-container { flex-direction: column; overflow: visible; }
            main { overflow: visible; }
            .editor-container { min-height: 500px; }
            aside { width: 100%; border-left: none; }
            aside.collapsed { margin-right: 0; transform: none; display: none; }
        }
    </style>
</head>
<body>
    <header>
        <div class="controls">
            <a href="{{ '/' | htmlBaseUrl }}">← Home</a>
            <button id="play-btn" class="primary">▶ PLAY</button>
            <button id="stop-btn" style="background: #dc3545; border-color: #bd2130;">■ STOP</button>
        </div>
        <h1 style="font-size: 1.3rem; margin: 0; color: #ffcc00; text-transform: uppercase;">{{ title }}</h1>
        <div class="controls">
            <div id="midi-status" style="font-size: 0.8rem; color: #888; margin-right: 1rem;">MIDI: checking...</div>
            <button id="sidebar-toggle" title="Toggle Sidebar">☰</button>
        </div>
    </header>
    
    <div class="app-container">
        <main>
            {% if content %}
            <div class="doc-container">{{ content | safe }}</div>
            {% endif %}

            <template id="song-source">{{ strudelCode | safe }}</template>
            <div class="editor-container">
                <strudel-editor id="strudel-repl"></strudel-editor>
            </div>

            <div id="piano-container"></div>
        </main>
        
        <aside id="sidebar">
            <div class="tabs">
                <div class="tab active" onclick="showTab('sounds')">Sounds</div>
                <div class="tab" onclick="showTab('ref')">Ref</div>
            </div>
            <div id="sounds" class="tab-content active">
                <p style="font-size: 1rem; color: #888; margin-top: 0;">Tap to hear!</p>
                <code onclick="previewSound('bd')">bd</code>
                <code onclick="previewSound('sd')">sd</code>
                <code onclick="previewSound('hh')">hh</code>
                <code onclick="previewSound('cp')">cp</code>
                <code onclick="previewSound('bass')">bass</code>
            </div>
            <div id="ref" class="tab-content">
                <code>s()</code>, <code>n()</code>, <code>gain()</code>
            </div>
        </aside>
    </div>
    
    <strudel-editor id="preview-repl" style="position: absolute; visibility: hidden; width: 0; height: 0;"></strudel-editor>

    <script>
        const sidebar = document.getElementById('sidebar');
        const toggleBtn = document.getElementById('sidebar-toggle');
        toggleBtn.onclick = () => {
            sidebar.classList.toggle('collapsed');
        };

        window.previewSound = (sound) => {
            const previewRepl = document.getElementById('preview-repl');
            if (previewRepl && previewRepl.editor) {
                previewRepl.editor.evaluate(`s("${sound}").once()`);
            }
        };

        const piano = document.getElementById('piano-container');
        const notes = ['C', 'C#', 'D', 'D#', 'E', 'F', 'F#', 'G', 'G#', 'A', 'A#', 'B'];
        const keys = {};

        for (let oct = 3; oct <= 5; oct++) {
            notes.forEach(note => {
                const key = document.createElement('div');
                const isBlack = note.includes('#');
                key.className = `piano-key ${isBlack ? 'black' : 'white'}`;
                const noteFull = `${note.toLowerCase()}${oct}`.replace('#', 's');
                key.id = `key-${noteFull}`;
                piano.appendChild(key);
                keys[noteFull] = key;
            });
        }

        function highlightKey(note) {
            const id = `key-${note.toLowerCase()}`;
            const el = document.getElementById(id);
            if (el) {
                el.classList.add('active');
                setTimeout(() => el.classList.remove('active'), 150);
            }
        }

        const repl = document.getElementById('strudel-repl');
        const source = document.getElementById('song-source');
        
        const interval = setInterval(() => {
            if (repl.editor) {
                repl.editor.setCode(source.content.textContent.trim());
                
                const originalDraw = repl.editor.onDraw;
                repl.editor.onDraw = (haps, time, painters) => {
                    const currentFrame = haps.filter((hap) => hap.isActive(time));
                    currentFrame.forEach(hap => {
                        if (hap.value && hap.value.note) {
                            highlightKey(hap.value.note);
                        }
                    });
                    if (originalDraw) originalDraw(haps, time, painters);
                };

                clearInterval(interval);
            }
        }, 50);

        document.getElementById('play-btn').onclick = () => repl.editor?.evaluate();
        document.getElementById('stop-btn').onclick = () => {
            repl.editor?.stop();
            document.getElementById('preview-repl').editor?.stop();
        };

        window.addEventListener('load', () => {
            document.querySelectorAll('code.language-abc').forEach((el) => {
                const pre = el.parentNode;
                const target = document.createElement('div');
                target.className = 'abc-notation';
                pre.parentNode.replaceChild(target, pre);
                ABCJS.renderAbc(target, el.textContent.trim(), { responsive: 'resize' });
            });
        });

        if (navigator.requestMIDIAccess) {
            navigator.requestMIDIAccess().then(access => {
                const updateMidi = () => {
                    const inputs = Array.from(access.inputs.values());
                    document.getElementById('midi-status').textContent = inputs.length > 0 
                        ? `MIDI: ${inputs[0].name}` 
                        : "MIDI: Disconnected";
                }
                updateMidi();
                access.onstatechange = updateMidi;
            });
        }

        window.showTab = (id) => {
            document.querySelectorAll('.tab, .tab-content').forEach(t => t.classList.remove('active'));
            if (event && event.target) {
                event.target.classList.add('active');
            }
            document.getElementById(id).classList.add('active');
        }
    </script>
</body>
</html>