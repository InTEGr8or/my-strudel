<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} - My Strudel</title>
    <!-- Polyfill for Strudel dependencies -->
    <script>window.process = { env: { NODE_ENV: 'production' } };</script>
    <script src="https://unpkg.com/@strudel/repl"></script>
    <style>
        body {
            font-family: system-ui, -apple-system, sans-serif;
            background: #1a1a1a;
            color: #eee;
            margin: 0;
            display: flex;
            flex-direction: column;
            height: 100vh;
            overflow: hidden;
        }
        header {
            padding: 0.5rem 1rem;
            background: #222;
            border-bottom: 1px solid #333;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 50px;
            box-sizing: border-box;
            flex-shrink: 0;
        }
        .controls {
            display: flex;
            gap: 0.5rem;
            align-items: center;
        }
        button {
            background: #333;
            color: white;
            border: 1px solid #444;
            padding: 0.3rem 0.8rem;
            border-radius: 4px;
            cursor: pointer;
            font-size: 0.9rem;
        }
        button:hover { background: #444; }
        button.primary { background: #005cc5; border-color: #0366d6; }
        button.primary:hover { background: #0366d6; }
        
        .app-container {
            display: flex;
            flex: 1;
            overflow: hidden;
        }
        main {
            flex: 1;
            display: flex;
            flex-direction: column;
            padding: 0;
            overflow: hidden;
            border-right: 1px solid #333;
            position: relative;
        }
        aside {
            width: 250px;
            display: flex;
            flex-direction: column;
            background: #111;
            flex-shrink: 0;
        }
        .tabs {
            display: flex;
            background: #222;
            border-bottom: 1px solid #333;
        }
        .tab {
            padding: 0.5rem 1rem;
            cursor: pointer;
            font-size: 0.9rem;
            border-bottom: 2px solid transparent;
        }
        .tab.active {
            border-bottom-color: #58a6ff;
            background: #111;
        }
        .tab-content {
            flex: 1;
            overflow-y: auto;
            padding: 1rem;
            display: none;
        }
        .tab-content.active {
            display: block;
        }
        .editor-container {
            flex: 1;
            display: flex;
            flex-direction: column;
            height: 100%;
        }
        /* The web component puts the editor in a sibling div */
        .editor-container div.cm-editor {
            flex: 1;
            height: 100% !important;
        }
        a { color: #58a6ff; text-decoration: none; }
        a:hover { text-decoration: underline; }
        code { background: #333; padding: 0.1rem 0.3rem; border-radius: 3px; font-family: monospace; }
        .ref-item { margin-bottom: 0.5rem; }
        .ref-item strong { display: block; color: #58a6ff; font-size: 0.9rem; }
        .ref-item span { font-size: 0.8rem; color: #888; }
        
        strudel-editor { 
            display: block;
            height: 0;
        }
    </style>
</head>
<body>
    <header>
        <div class="controls">
            <a href="/">← Songs</a>
            <button id="play-btn" class="primary">▶ Play (Ctrl+Enter)</button>
            <button id="stop-btn">■ Stop</button>
        </div>
        <h1 style="font-size: 1.1rem; margin: 0;">{{ title }}</h1>
        <div style="width: 100px"></div>
    </header>
    <div class="app-container">
        <main>
            <!-- Use template and read as textContent to avoid HTML interpretation of '<' and '>' -->
            <template id="song-source">{{ strudelCode | safe }}</template>
            <div class="editor-container" id="editor-parent">
                <strudel-editor id="strudel-repl"></strudel-editor>
            </div>
        </main>
        <aside>
            <div class="tabs">
                <div class="tab active" onclick="showTab('sounds')">Sounds</div>
                <div class="tab" onclick="showTab('ref')">Ref</div>
            </div>
            <div id="sounds" class="tab-content active">
                <code>bd</code>, <code>sd</code>, <code>hh</code>, <code>cp</code>, <code>bass</code>
            </div>
            <div id="ref" class="tab-content">
                <code>s()</code>, <code>n()</code>, <code>gain()</code>
            </div>
        </aside>
    </div>
    <script>
        const repl = document.getElementById('strudel-repl');
        const source = document.getElementById('song-source');
        
        // Wait for the editor to initialize then push the code
        const interval = setInterval(() => {
            if (repl.editor) {
                // Using textContent instead of innerHTML to prevent character escaping issues
                repl.editor.setCode(source.innerHTML ? source.content.textContent.trim() : '');
                clearInterval(interval);
            }
        }, 50);
        
        document.getElementById('play-btn').onclick = () => {
            repl.editor?.evaluate();
        };
        
        document.getElementById('stop-btn').onclick = () => {
            repl.editor?.stop();
        };

        window.showTab = (id) => {
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            event.target.classList.add('active');
            document.getElementById(id).classList.add('active');
        }
    </script>
</body>
</html>
